{{>header}}

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            {{#if message}}
                <div class="alert alert-dismissible fade show alert-{{message.type}}" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                        <strong>
                            {{message.message}}
                        </strong>
                </div>
            {{/if}}
            <div class="table-responsive">
                {{#if students}}
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th>Rollnumber</th>
                            <th>Name</th>
                            <th>Score</th>
                            <th>Date Of Birth</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each students}}
                        <tr class="align-middle">
                            <td>{{this.rollnumber}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.score}}</td>
                            <td>{{this.dob}}</td>
                            <td>
                                <a href="/api/v1/get/{{this.id}}" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                <a href="/api/v1/delete/{{this.id}}" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}
                
            </div>
        </div>
    </div>
</div>



{{>footer}}